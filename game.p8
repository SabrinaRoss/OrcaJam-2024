function _draw()
	cls()
	circfill(x, y, radius, 8)
	circfill(x+margin, y+margin, radius,10)
	circfill(x-margin, y-margin, radius, 12)
end

function _update()
	if (time() - last > .02) then
		last = time()
		x,y = shrink(x, y)
		if radius == 0 then radius = 30 end
	end
end

function _init()
	x = 64
	y = 64
	margin = 40
	radius = 20
	angle = 0
	last = time()
end
